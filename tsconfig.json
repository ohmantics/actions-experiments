{
  "compileOnSave": true,
  "compilerOptions": {
    "target": "ES2018", // ~node10
    "module": "commonjs",
    "lib": [
      "es2015",
      "es2016",
      "es2017",
      "es2018",
      "es2018.promise"
    ],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./dist",
    "rootDir": ".",
    "strict": false, // FIXME: make work in strict mode
    "esModuleInterop": true,
    "noImplicitAny": false, // ~template
    "noUnusedLocals": true, // ~original
    "noUnusedParameters": true // ~original
  },
  "include": [
    "."
  ],
  "exclude": []
}
